resource "aws_apprunner_service" "api_service" {
  service_name = "meli-price-predictor-service"

  source_configuration {
    authentication_configuration {
      # App Runner necesita permiso para leer de tu ECR
      access_role_arn = aws_iam_role.apprunner_service_role.arn
    }

    image_repository {
      image_identifier      = "${aws_ecr_repository.meli_api_repo.repository_url}:latest"
      image_repository_type = "ECR"
      image_configuration {
        port = "80" # El puerto que expusiste en tu Dockerfile
      }
    }
    auto_deployments_enabled = true
  }

  instance_configuration {
    cpu    = "1024" # 1 vCPU
    memory = "2048" # 2 GB RAM
  }
}

# IAM Role necesario para que App Runner acceda a ECR
resource "aws_iam_role" "apprunner_service_role" {
  name = "AppRunnerECRAccessRole"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [{
      Action = "sts:AssumeRole"
      Effect = "Allow"
      Principal = { Service = "build.apprunner.amazonaws.com" }
    }]
  })
}

resource "aws_iam_role_policy_attachment" "apprunner_ecr_policy" {
  role       = aws_iam_role.apprunner_service_role.name
  policy_arn = "arn:aws:iam::aws:policy/service-role/AWSAppRunnerServicePolicyForECRAccess"
}

output "api_public_url" {
  description = "URL pública de tu modelo en producción"
  value       = "https://${aws_apprunner_service.api_service.service_url}"
}